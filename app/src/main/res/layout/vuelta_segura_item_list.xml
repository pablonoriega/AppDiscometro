<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_vuelta_segura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nombreObj_objetos_perdidos_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toEndOf="@+id/imgUserProfile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/usuario_objetos_perdidos_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/imgUserProfile"
                app:layout_constraintTop_toBottomOf="@+id/nombreObj_objetos_perdidos_item" />

            <ImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="68dp"
                android:layout_height="64dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/downtownlogocrop" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgUserProfile"
                app:srcCompat="@android:drawable/ic_menu_send" />

            <TextView
                android:id="@+id/descripcion_objetos_perdidos_item"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imgUserProfile" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

            <TextView
                android:id="@+id/tv_location_vuelta_segura_item"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/descripcion_objetos_perdidos_item" />

            <Button
                android:id="@+id/buttonReclamar"
                android:layout_width="102dp"
                android:layout_height="38dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="116dp"
                android:text="SOLICITAR"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/tv_location_vuelta_segura_item"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>