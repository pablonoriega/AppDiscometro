<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_favsitemlist_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <ImageView
                android:id="@+id/iv_favsitemlist_logo"
                android:layout_width="98dp"
                android:layout_height="93dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:cropToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_favsitemlist_gotoprofile"
                android:layout_width="102dp"
                android:layout_height="48dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="16dp"
                android:text="VISITAR PERFIL"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_favsitemlist_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_favsitemlist_delete"
                android:layout_width="102dp"
                android:layout_height="48dp"
                android:layout_marginStart="132dp"
                android:text="ELIMINAR"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_favsitemlist_logo"
                app:layout_constraintTop_toBottomOf="@+id/btn_favsitemlist_gotoprofile" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>