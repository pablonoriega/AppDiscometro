<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_safereturnitemlist_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_safereturnitemlist_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toEndOf="@+id/iv_safereturnitemlist_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_safereturnitemlist_useremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/iv_safereturnitemlist_logo"
                app:layout_constraintTop_toBottomOf="@+id/tv_safereturnitemlist_username" />

            <ImageView
                android:id="@+id/iv_safereturnitemlist_logo"
                android:layout_width="68dp"
                android:layout_height="64dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_safereturnitemlist_origin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="92dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_send" />

            <TextView
                android:id="@+id/tv_safereturnitemlist_origin"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="92dp"
                app:layout_constraintStart_toEndOf="@+id/iv_safereturnitemlist_origin"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_safereturnitemlist_dest"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_safereturnitemlist_origin"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

            <TextView
                android:id="@+id/tv_safereturnitemlist_dest"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="120dp"
                app:layout_constraintStart_toEndOf="@+id/iv_safereturnitemlist_dest"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_safereturnitemlist_join"
                android:layout_width="102dp"
                android:layout_height="48dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="92dp"
                android:text="SOLICITAR"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/tv_safereturnitemlist_dest"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>